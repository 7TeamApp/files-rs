{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "DOM"],
        "module": "esnext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "paths": {
            "files-rs": ["."]
        },
        "resolveJsonModule": true,
        "typeRoots": ["**/types/**/*", "**/@types/**/*", "**/*.{ts,cts,mts,d.ts,d.cts,d.mts}"],
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["bun", "bun:test"]
}
